<service_bundle type="manifest" name="manta-application-garbage-deleter">
    <service name="manta/application/garbage-deleter" type="service" version="1">

        <create_default_instance enabled="true" />
        <single_instance />

        <dependency name="dep0" grouping="require_all" restart_on="error" type="service">
            <service_fmri value="svc:/milestone/multi-user:default" />
        </dependency>

        <exec_method type="method" name="start" timeout_seconds="10" exec="/opt/smartdc/mako/build/node/bin/node --abort-on-uncaught-exception /opt/smartdc/mako/bin/garbage-deleter.js &amp;">
            <method_context>
                <method_environment>
                    <envvar name="HOME" value="/root" />
                    <envvar name="PATH" value="/opt/smartdc/mako/bin:/opt/local/bin:/opt/local/sbin:/usr/sbin:/usr/bin:/sbin" />
                </method_environment>
            </method_context>
        </exec_method>

        <exec_method type="method" name="stop" exec=":kill" timeout_seconds="30" />

        <template>
            <common_name>
                <loctext xml:lang="C">Manta Garbage Deleter</loctext>
            </common_name>
        </template>

    </service>
</service_bundle>
